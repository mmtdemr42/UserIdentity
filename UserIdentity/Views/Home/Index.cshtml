@{
    ViewBag.Title = "Home Page";
}

<h2>Anasayfa</h2>
<hr />
@if (User.Identity.IsAuthenticated)
{
    <label class="label label-info">
        @User.Identity.Name
    </label>
    <a href="/Account/LogOut" class="btn btn-danger">Çıkış Yap</a>
}
else
{
    <a href="/Account/Login" class="btn btn-danger">Giriş Yap</a>
    <a href="/Account/Register" class="btn btn-primary">Kayıt Ol</a>
}